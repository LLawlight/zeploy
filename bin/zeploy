#!/usr/bin/env node

const program = require('commander');

program
  .version(require('../package.json').version)
  .usage('<command> <env>')

program
  .command('config <env>')
  .description('生成配置文件')
  .action(env => {
    require('../lib/config')(env)
  })

program
  .command('publish <env>')
  .description('部署项目')
  .action(env => {
    require('../lib/publish')(env)
  })

program.parse(process.argv)

if (!process.argv.slice(2).length) {
  program.outputHelp()
}